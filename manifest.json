{
  "manifest_version": 3,
  "name": "Mercava Translator",
  "version": "1.0",
  "description": "AI based Translator for themercava.com",
  "content_scripts": [
    {
      "matches": ["https://themercava.com/*","https://www.themercava.com/*"], 
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ],
  "permissions": ["storage"],
  "options_page": "options/options.html",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}